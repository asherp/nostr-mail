{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NostrMail",
  "version": "1.0.1-beta",
  "identifier": "com.nostr.mail",
  "build": {
    "frontendDist": "../../frontend"
  },
  "app": {
    "windows": [
      {
        "title": "NostrMail",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
